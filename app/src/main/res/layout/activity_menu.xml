<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="596dp"
        android:layout_height="977dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/balloon_image" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#f0a625"
        android:text="Jouer"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classImageView" />

    <Button
        android:id="@+id/itemListButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#f0a625"
        android:text="Liste des questions"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/statsButton"
        app:layout_constraintStart_toStartOf="@+id/statsButton"
        app:layout_constraintTop_toBottomOf="@+id/statsButton" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#f0a625"
        android:text="Ã€ propos"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/itemListButton"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/itemListButton"
        app:layout_constraintTop_toBottomOf="@+id/itemListButton" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#f0a625"
        android:text="Statistiques"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/quizButton"
        app:layout_constraintStart_toStartOf="@+id/quizButton"
        app:layout_constraintTop_toBottomOf="@+id/quizButton" />

    <ImageView
        android:id="@+id/classImageView"
        android:layout_width="352dp"
        android:layout_height="246dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_class" />



</androidx.constraintlayout.widget.ConstraintLayout>